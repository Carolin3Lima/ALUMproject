<div class="container-login">

  <h2><small>Acesse a sua conta</small></h2>

  <form action="/login" method="POST">

    <div class="group">
      <input type="" name="email" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label for="email">E-mail</label>
    </div>

    <div class="group">
      <input name="password" type="password" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label for="password" name="password">Senha</label>
    </div>

    {{#if MessageEvent}}
    <div>{{ MessageEvent }}</div>
    {{/if}}

    <button type="submit" class="botao-entrar">Entrar</button>
  </form>

</div>

<p class="footer-login">
  NÃ£o tem uma conta? <a href="/user" target="_blank">Cadastre-se</a>
</p>