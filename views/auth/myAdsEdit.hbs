    {{!-- EDITA --}}

      <div class="container">

         
            <div class="panel-body">

                <div class="form-group">
                  <label for="name" class="col-sm-3 control-label">Título do anúncio:</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="title" id="title" value="{{title}}">
                  </div>
                </div> <!-- form-group // -->

                <div class="form-group">
                  <label for="price" class="col-sm-3 control-label">Preço:</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="value" value="{{price}}" id="price">
                  </div>
                </div> <!-- form-group // -->
                <div class="form-group">
                  <label for="name" class="col-sm-3 control-label">Nome da escola:</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="school" id="school" value="{{school}}">
                  </div>
                </div> <!-- form-group // -->
                <div class="form-group">
                  <label for="about" class="col-sm-3 control-label">Descrição:</label>
                  <div class="col-sm-9">
                    <textarea name="description" value="{{description}}" class="form-control"></textarea>
                  </div>
                </div> <!-- form-group // -->
                <div class="form-group">
                  <label for="tech" class="col-sm-3 control-label">Produto</label>
                  <div class="col-sm-3">
                    <select name="product" class="form-control">
                      <option value="{{product}}"></option>
                      <option value="Uniforme">Uniforme</option>
                      <option value="Livro">Livro</option>
                      <option value="Outros">Outros</option>
                    </select>
                  </div>
                </div> <!-- form-group // -->
                <div class="form-group">
                  <label for="tech" class="col-sm-3 control-label">Estado de uso</label>
                  <div class="col-sm-3">
                    <select name="tagState" class="form-control">
                      <option value="{{tagState}}"></option>
                      <option value="Novo">Novo</option>
                      <option value="Usado">Usado</option>
                    </select>
                  </div>
                </div> <!-- form-group // -->
                <div class="form-group">
                  <label for="name" class="col-sm-3 control-label">Carregar Imagem</label>
                  <div class="col-sm-3">
                    <label class="img-charge" "control-label small" for="file_img">Formato (jpg/png):</label>
                    <input class="img-charge" value="{{imgPath}}" type="file" name="imgPath">
                  </div>

                </div> <!-- form-group // -->
                <div class="form-group">
                  <label for="tech" class="col-sm-3 control-label">Ano escolar</label>
                  <div class="col-sm-3">
                    <select name="tagYear" class="form-control">
                      <option value="{{tagYear}}"></option>
                      <option value="1 ano">1 ano</option>
                      <option value="2 ano">2 ano</option>
                      <option value="3 ano">3 ano</option>
                      <option value="4 ano">4 ano</option>
                      <option value="5 ano">5 ano</option>
                      <option value="6 ano">6 ano</option>
                      <option value="7 ano">7 ano</option>
                      <option value="8 ano">8 ano</option>
                      <option value="9 ano">9 ano</option>
                      <option value="1 ano Medio">1 ano - médio</option>
                      <option value="2 ano Medio">2 ano - médio</option>
                      <option value="3 ano Medio">3 ano - médio</option>
                    </select>
                  </div>
                </div> <!-- form-group // -->

    {{#if errorMessage}}
    <div>{{ errorMessage }}</div>
    {{/if}}

    <button class="save-button" type="submit">Salvar</button>
  </form>
